---
import BaseLayout from "@layouts/BaseLayout.astro";

interface Props {
    pageTitle: string;
    description?: string;
}

const { pageTitle, description } = Astro.props;
const suffix = false;
---

<BaseLayout pageTitle={pageTitle} description={description} suffix={suffix}>
    <div class="my-16 mx-8 sm:mx-12 md:mx-16 lg:mx-24">
        <slot />
    </div>
</BaseLayout>