---
import BareLayout from '@layouts/BareLayout.astro';
import Footer from '@components/Footer';
import NavBar from '@components/NavBar';

interface Props {
    pageTitle: string;
    description?: string;
}

const { pageTitle, description } = Astro.props;
---

<BareLayout pageTitle=`${pageTitle} - MindVista` description={description}>
    <NavBar client:load />
    <main class="flex-grow mt-[10vh]">
        <slot />
    </main>
    <Footer />
</BareLayout>


<!-- initialize and handle theme switching (see @components/ThemeIcon.tsx for event management) -->
<script is:inline>
    const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            return 'dark';
        }
        return 'light';
    })();

    const element = document.documentElement;
    if (theme === 'light') {
        element.classList.remove('dark');
        element.classList.add('light');
    } else {
        element.classList.remove('light');
        element.classList.add('dark');
    }

    window.localStorage.setItem('theme', theme);
</script>
