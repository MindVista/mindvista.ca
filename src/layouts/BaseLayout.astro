---
import BareLayout from "@layouts/BareLayout.astro";
import Footer from "@components/chromes/Footer";
import NavBar from "@components/chromes/NavBar";

import "@styles/global.css";

interface Props {
    pageTitle: string;
    description?: string;
    suffix: boolean; // whether or not " - MindVista" should be appended to the page title
    className?: string;
}

let { pageTitle } = Astro.props;
const { description, suffix, className } = Astro.props;

if (suffix) pageTitle += " - MindVista";
---

<BareLayout pageTitle=`${pageTitle}` description={description}>
    <NavBar client:load />
    <main class={`${className} pt-[10vh]`}>
        <slot />
    </main>
    <Footer />
</BareLayout>
