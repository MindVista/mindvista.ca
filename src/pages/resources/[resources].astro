---
import { getEntry } from "astro:content";
import EntityLayout from "@layouts/EntityLayout.astro";

const { resources } = Astro.params;
if (resources === undefined) {
    return Astro.redirect("/404");
}

const entry = await getEntry("resources", resources);
if (entry === undefined) {
    return Astro.redirect("/404");
}

const { data } = entry;
---

<EntityLayout frontmatter={data} type="resource" />
