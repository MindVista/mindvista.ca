---
import ContactForm from "@components/forms/ContactForm";
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout pageTitle="Contact Us" description="Get in touch with us - we're here to help!">
    <div class="container mx-auto px-6 sm:px-4 py-12 max-w-4xl">
        <!-- Header Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-purple-500 to-blue-400 dark:from-purple-400 dark:to-blue-300 bg-clip-text text-transparent">
                Contact Us
            </h1>
            <p class="text-xl text-cTextOffset max-w-2xl mx-auto">
                Have questions or feedback? We're here to listen and help. Your mental health journey matters to us.
            </p>
        </div>

        <!-- Contact Form Section -->
        <div class="bg-cBackgroundOffset rounded-xl shadow-[0_8px_30px_rgb(0,0,0,0.04)] dark:shadow-[0_8px_30px_rgb(15,23,42,0.3)] p-8 md:p-12 mb-16">
            <div class="mx-auto">
                <ContactForm client:load />
            </div>
        </div>

        <!-- Additional Contact Info -->
        <div class="mt-16 text-center">
            <h2 class="text-2xl font-semibold mb-4 text-cText">Other Ways to Reach Us</h2>
            <p class="text-cTextOffset mb-6">
                If you prefer other methods of communication or need immediate assistance:
            </p>
            <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto">
                <div class="bg-cBackgroundOffset p-6 rounded-lg">
                    <h3 class="text-lg font-semibold mb-2 text-cText">Emergency Support</h3>
                    <p class="text-cTextOffset">
                        If you're in crisis, please visit our
                        <a href="/im-in-crisis" class="text-cAccent hover:opacity-80">
                            emergency resources
                        </a>
                        page.
                    </p>
                </div>
                <div class="bg-cBackgroundOffset p-6 rounded-lg">
                    <h3 class="text-lg font-semibold mb-2 text-cText">General Inquiries</h3>
                    <p class="text-cTextOffset">
                        For general questions, email us at
                        <a href="mailto:info@mindvista.ca" class="text-cAccent hover:opacity-80">
                            info@mindvista.ca.
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</PageLayout>