---
import ContactForm from "@components/forms/ContactForm";
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout pageTitle="Contact Us" description="Get in touch with us - we're here to help!">
    <div class="container mx-auto max-w-4xl px-6 py-12 sm:px-4">
        <!-- Header Section -->
        <div class="mb-12 text-center">
            <h1
                class="mb-4 bg-gradient-to-r from-purple-500 to-blue-400 bg-clip-text text-4xl font-bold text-transparent md:text-5xl dark:from-purple-400 dark:to-blue-300"
            >
                Contact Us
            </h1>
            <p class="mx-auto max-w-2xl text-xl font-medium text-cTextOffset">
                Have questions or feedback? We're here to listen and help. Your mental health journey matters to us.
            </p>
        </div>

        <!-- Contact Form Section -->
        <div class="mx-auto">
            <ContactForm client:load />
        </div>

        <!-- Additional Contact Info -->
        <div class="mt-16 text-center">
            <h2 class="mb-4 text-2xl font-semibold text-cText">Other Ways to Reach Us</h2>
            <p class="mb-6 text-cTextOffset">
                If you prefer other methods of communication or need immediate assistance:
            </p>
            <div class="mx-auto grid max-w-2xl gap-6 md:grid-cols-2">
                <div class="rounded-lg bg-cBackgroundOffset p-6">
                    <h3 class="mb-2 text-lg font-semibold text-cText">Emergency Support</h3>
                    <p class="text-cTextOffset">
                        If you're in crisis, please visit our
                        <a href="/im-in-crisis" class="text-cAccent hover:opacity-80"> emergency resources </a>
                        page.
                    </p>
                </div>
                <div class="rounded-lg bg-cBackgroundOffset p-6">
                    <h3 class="mb-2 text-lg font-semibold text-cText">General Inquiries</h3>
                    <p class="text-cTextOffset">
                        For general questions, email us at
                        <a href="mailto:info@mindvista.ca" class="text-cAccent hover:opacity-80">
                            info@mindvista.ca.
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</PageLayout>
