---
import { getEntry, render } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Prose from "@components/wrappers/Prose.astro";

// 1. Get the slug from the incoming server request
const { legal } = Astro.params;
if (legal === undefined) {
    return Astro.redirect("/404");
}
// 2. Query for the entry directly using the request slug
const post = await getEntry("legal", legal);
// 3. Redirect if the entry does not exist
if (post === undefined) {
    return Astro.redirect("/404");
}
// 4. Render the entry to HTML in the template
const { Content } = await render(post);
---

<PageLayout pageTitle={post.data.title} description={post.data.description}>
    <div class="container mx-auto max-w-4xl px-4 py-8 md:py-12 lg:py-16">
        <div class="rounded-xl bg-cBackgroundOffset p-6 shadow-[0_8px_30px_rgb(0,0,0,0.04)] md:p-8 lg:p-12 dark:shadow-[0_8px_30px_rgb(15,23,42,0.3)]">
            <Prose>
                <Content />
            </Prose>
        </div>
    </div>
</PageLayout>
